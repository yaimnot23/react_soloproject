// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// 1. 사용자 (User)
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String   // 암호화된 비밀번호가 저장됨
  name      String?
  createdAt DateTime @default(now())

  // 내가 쓴 버그 로그들 (1:N 관계)
  bugLogs   BugLog[]
}

// 2. 에러 로그 (BugLog) 
model BugLog {
  id              Int      @id @default(autoincrement())

  errorSubject    String   // 에러 제목
  errorDetail     String?  // 에러 상세 내용
  solution        String?  // 해결 방법
  tags            String?  // 태그

  // 값 예시: 'low', 'normal', 'high', 'critical'
  priority        String   @default("normal") 

  isSolved        Boolean  @default(false)
  occurrenceCount Int      @default(1)

  createdAt       DateTime @default(now())
  lastOccurredAt  DateTime @default(now())

  userId          Int?
  user            User?    @relation(fields: [userId], references: [id])
}